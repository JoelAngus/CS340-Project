<form id="add-person-form" method="POST" action="/add-person-form">
    <label for="input-fname">Product Name: </label>
    <input type="text" name="input-fname" id="input-fname-ajax">
    
    <label for="input-lname">Is Clearnce Item: </label>
    <input type="text" name="input-lname" id="input-lname-ajax">

    <label for="input-homeworld">Product Type: </label>
    <input name="input-homeworld" id="input-homeworld-ajax">

    <label for="input-age">Retail Price: </label>
    <input type="text" name="input-age" id="input-age-ajax">

    <input type="submit">
</form>


