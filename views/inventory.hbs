{{!-- Just some plain text --}}

<h1>Inventory</h1>


{{!-- The Data from our Database --}}

{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <td>"product_inventory_id"</td>
            <td>"product_id"</td>
            <td>location</td>
            <td>onhand_quanity</td>
             <td>Delete</td>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.product_inventory_id}}</td>
            <td>{{this.product_id}}</td>
            <td>{{this.location}}</td>
            <td>{{this.onhand_quantity}}</td>
            <td><button onclick="deleteInventory({{this.product_inventory_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

</table>
<script src="./js/delete_customer.js"></script>


