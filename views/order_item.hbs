{{!-- Just some plain text --}}

<h1>Order Item</h1>

{{!-- The Data from our Database --}}

{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <td>order_item_id</td>
            <td>product_id</td>
            <td>order_header_id</td>
            <td>quantity</td>
             <td>Delete</td>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.order_item_id}}</td>
            <td>{{this.product_id}}</td>
            <td>{{this.order_header_id}}</td>
            <td>{{this.quantity}}</td>
            <td><button onclick="deleteorder_item({{this.order_item_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

</table>
<script src="./js/delete_customer.js"></script>


