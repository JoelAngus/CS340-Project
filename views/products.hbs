<h1>Products</h1>

{{!-- The Data from our Database --}}

{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
              <td>"product_id"</td>
            <td>"product_name"</td>
            <td>product_is_clearance</td>
            <td>product_type</td>
            <td>product_retail_price</td>
             <td>Delete</td>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.product_id}}</td>
            <td>{{this.product_name}}</td>
            <td>{{this.product_is_clearance}}</td>
            <td>{{this.product_type}}</td>
            <td>{{this.product_retail_price}}</td>
            <td><button onclick="deleteProduct({{this.product_id}})">Delete</button></td>
            
            
        </tr>
        {{/each}}
    </tbody>
</table>

</table>
<script src="./js/delete_customer.js"></script>


